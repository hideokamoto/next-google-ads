{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "np"
  },
  "peerDependencies": {
    "next": ">=16",
    "react": ">=19"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "np": {
    "yarn": false,
    "contents": ".",
    "anyBranch": false,
    "publish": true,
    "releaseDraft": true
  },
  "name": "next-google-ads",
  "description": "Google AdSense component for Next.js with optimized script loading",
  "author": "Hidetaka Okamoto",
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/next-google-ads.git"
  },
  "keywords": [
    "nextjs",
    "next",
    "google-adsense",
    "adsense",
    "ads",
    "react",
    "typescript"
  ],
  "module": "dist/next-google-ads.esm.js",
  "size-limit": [
    {
      "path": "dist/next-google-ads.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/next-google-ads.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "husky": "^7.0.2",
    "next": "^16.0.0",
    "np": "^10.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^5.7.0"
  }
}
